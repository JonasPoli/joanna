{% extends ('ROLE_DEV' in app.user.roles) ? 'admin/layout.html.twig' : 'editor/layout.html.twig' %}

{% block title %}Chat - Referência #{{ reference.id }}{% endblock %}

{% block admin_content %}
    {{ block('content') }}
{% endblock %}

{% block editor_content %}
    {{ block('content') }}
{% endblock %}

{% block content %}
<div class="flex flex-col h-[calc(100vh-200px)] max-w-4xl mx-auto border border-base-300 rounded-xl overflow-hidden bg-base-100 shadow-xl">
    <!-- Header -->
    <div class="p-4 bg-base-200 border-b border-base-300">
        <div class="flex justify-between items-start">
            <div class="flex items-start gap-4">
                <a href="{{ path('app_admin_message_index') }}" class="btn btn-ghost btn-sm btn-circle mt-1">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" /></svg>
                </a>
                <div class="flex-1">
                    <h2 class="font-bold text-lg">{{ reference.work.title }}</h2>
                    <p class="text-sm opacity-80">Cap. {{ reference.joannaChapter }} — {{ reference.bibleBook.name }} {{ reference.bibleChapter }}:{{ reference.bibleVerseStart }}{% if reference.bibleVerseEnd %}-{{ reference.bibleVerseEnd }}{% endif %}</p>
                    {% if reference.citation %}
                    <blockquote class="mt-2 text-sm italic opacity-70 border-l-2 border-primary pl-3 max-w-2xl line-clamp-3">
                        "{{ reference.citation }}"
                    </blockquote>
                    {% endif %}
                </div>
            </div>
            <div class="flex items-center gap-2">
                <div class="badge badge-outline shrink-0">{{ reference.getCreatedBy() == app.user ? 'Autor' : 'Revisor' }}</div>
                {% if is_resolved|default(false) %}
                    <span class="badge badge-success gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>
                        Resolvida
                    </span>
                {% else %}
                    <form action="{{ path('app_admin_message_resolve', {'id': reference.id}) }}" method="POST" class="inline">
                        <button type="submit" class="btn btn-sm btn-success text-white gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>
                            Resolver
                        </button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Chat Area -->
    <div id="chat-messages" class="flex-1 overflow-y-auto p-4 bg-[#e5ddd5] dark:bg-base-300 space-y-4">
        {% for message in history %}
            {% set isMe = (message.sender == app.user) %}
            <div class="flex {{ isMe ? 'justify-end' : 'justify-start' }}">
                <div class="max-w-[80%] px-4 py-2 rounded-lg shadow-sm {{ isMe ? 'bg-blue-600 text-white rounded-tr-none' : 'bg-base-100 text-base-content rounded-tl-none border border-base-300' }}">
                    {% if not isMe %}
                        <p class="text-[10px] font-bold mb-1 opacity-70">{{ message.sender.name }}</p>
                    {% endif %}
                    <p class="text-sm">{{ message.content }}</p>
                    <div class="flex justify-end items-center gap-1 mt-1 opacity-50 text-[10px]">
                        <span>{{ message.createdAt|date('H:i') }}</span>
                        {% if isMe %}
                             {% if message.status == 'unread' %}
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>
                             {% else %}
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 text-sky-400"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                             {% endif %}
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Input Area -->
    <div class="p-4 bg-base-200 border-t border-base-300">
        <form method="POST" class="flex gap-2">
            <input type="text" name="content" autocomplete="off" placeholder="Digite sua mensagem..." class="input input-bordered flex-1 focus:outline-none" required />
            <button type="submit" class="btn btn-primary text-white btn-circle">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" /></svg>
            </button>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const chatArea = document.getElementById('chat-messages');
        chatArea.scrollTop = chatArea.scrollHeight;
    });
</script>
{% endblock %}
