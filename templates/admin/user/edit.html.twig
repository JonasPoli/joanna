{% extends 'admin/layout.html.twig' %}

{% block title %}Editar Usuário{% endblock %}

{% block admin_content %}
    <div class="md:grid md:grid-cols-3 md:gap-6">
        <div class="md:col-span-1">
            <div class="px-4 sm:px-0">
                <h3 class="text-lg font-medium leading-6 text-gray-900">Editar Usuário</h3>
                <p class="mt-1 text-sm text-gray-600">
                    Atualize as informações pessoais, perfis e credenciais segurança do usuário.
                </p>
                 <div class="mt-4">
                     <a href="{{ path('app_admin_user_index') }}" class="text-indigo-600 hover:text-indigo-900">&larr; Voltar para lista</a>
                </div>
                
                 {% if user.imageProfile %}
                    <div class="mt-6">
                        <label class="block text-sm font-medium text-gray-700">Imagem Atual</label>
                        <div class="mt-2">
                             <img src="{{ asset('uploads/profiles/' ~ user.imageProfile) }}" class="h-40 w-40 rounded-full object-cover border-4 border-white shadow-lg">
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="mt-5 md:mt-0 md:col-span-2">
             <div class="shadow sm:rounded-md sm:overflow-hidden">
                <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
                    {{ include('admin/user/_form.html.twig', {'button_label': 'Atualizar Usuário'}) }}
                </div>
                 <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                     {{ include('admin/user/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
