{% extends 'admin/layout.html.twig' %}

{% block title %}Detalhes do Usuário{% endblock %}

{% block admin_content %}
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
            <div>
                <h3 class="text-lg leading-6 font-medium text-gray-900">Detalhes do Usuário</h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">Informações pessoais e perfis de acesso.</p>
            </div>
             <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">Editar Usuário</a>
        </div>
        <div class="border-t border-gray-200">
            <dl>
                 <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">Imagem de Perfil</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                         {% if user.imageProfile %}
                            <img src="{{ asset('uploads/profiles/' ~ user.imageProfile) }}" class="h-24 w-24 rounded-full object-cover">
                        {% else %}
                            <span class="inline-block h-24 w-24 rounded-full overflow-hidden bg-gray-100">
                                <svg class="h-full w-full text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                                  <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
                                </svg>
                            </span>
                        {% endif %}
                    </dd>
                </div>
                <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">Nome Completo</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ user.name }}</dd>
                </div>
                <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">E-mail</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ user.email }}</dd>
                </div>
                <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">Perfis</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                        {{ user.roles|json_encode }}
                    </dd>
                </div>
                 <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium text-gray-500">ID do Usuário</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">{{ user.id }}</dd>
                </div>
            </dl>
        </div>
    </div>
    
    <div class="mt-6">
        <a href="{{ path('app_admin_user_index') }}" class="text-indigo-600 hover:text-indigo-900">Voltar para lista</a>
        
        <div class="mt-4">
             {{ include('admin/user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
