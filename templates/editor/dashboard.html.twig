{% extends 'editor/layout.html.twig' %}

{% block title %}Painel do Editor{% endblock %}

{% block editor_content %}
    <h3 class="text-gray-700 text-3xl font-medium">Bem-vindo, {{ app.user.name }}!</h3>
    
    <div class="mt-4">
        <div class="flex flex-wrap -mx-6">
            <div class="w-full px-6 sm:w-1/2 xl:w-1/3">
                <a href="{{ path('app_editor_joanna_reference_index') }}" class="flex items-center px-5 py-6 shadow-sm rounded-md bg-white hover:bg-gray-50 transition">
                    <div class="p-3 rounded-full bg-indigo-600 bg-opacity-75">
                         <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                         </svg>
                    </div>
                    <div class="mx-5">
                       <h4 class="text-2xl font-semibold text-gray-700">Minhas ReferÃªncias</h4>
                       <div class="text-gray-500">Ver Todas</div>
                    </div>
                </a>
            </div>

            <div class="w-full px-6 sm:w-1/2 xl:w-1/3 mt-6 sm:mt-0">
                <a href="{{ path('app_admin_message_index') }}" class="flex items-center px-5 py-6 shadow-sm rounded-md bg-white hover:bg-gray-50 transition">
                    <div class="p-3 rounded-full bg-orange-500 bg-opacity-75">
                         <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                         </svg>
                    </div>
                    <div class="mx-5">
                        <h4 class="text-2xl font-semibold text-gray-700">{{ pending_message_count() }}</h4>
                        <div class="text-gray-500">Mensagens Pendentes</div>
                    </div>
                </a>
            </div>

             <div class="w-full px-6 sm:w-1/2 xl:w-1/3 mt-6 xl:mt-0">
                <a href="{{ path('app_editor_joanna_reference_new') }}" class="flex items-center px-5 py-6 shadow-sm rounded-md bg-white hover:bg-gray-50 transition">
                    <div class="p-3 rounded-full bg-green-600 bg-opacity-75">
                         <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                         </svg>
                    </div>
                    <div class="mx-5">
                        <h4 class="text-2xl font-semibold text-gray-700">Nova ReferÃªncia</h4>
                        <div class="text-gray-500">Cadastrar</div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <!-- Mensagens Pendentes -->
    <div class="mt-8">
        <div class="flex items-center justify-between mb-4">
            <h4 class="text-xl font-semibold text-gray-700">Mensagens Pendentes</h4>
            <a href="{{ path('app_admin_message_index') }}" class="text-sm text-blue-600 hover:underline">Ver todas</a>
        </div>
        
        <div class="bg-white shadow rounded-lg overflow-hidden">
            {% set pendingMessages = pending_messages(5) %}
            {% if pendingMessages|length > 0 %}
                <div class="divide-y divide-gray-200">
                    {% for message in pendingMessages %}
                        <a href="{{ path('app_admin_message_chat', {'id': message.reference.id}) }}" class="flex items-center px-6 py-4 hover:bg-gray-50 transition">
                            <div class="flex-shrink-0">
                                <div class="w-10 h-10 rounded-full bg-gray-300 flex items-center justify-center text-sm font-medium text-gray-600">
                                    {{ message.sender.name|slice(0,2)|upper }}
                                </div>
                            </div>
                            <div class="ml-4 flex-1 min-w-0">
                                <div class="flex items-center gap-2">
                                    <p class="text-sm font-medium text-gray-900 truncate">{{ message.sender.name }}</p>
                                    {% if message.status == 'unread' and message.recipient == app.user %}
                                        <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                                    {% endif %}
                                </div>
                                <p class="text-sm text-gray-500 truncate">{{ message.content }}</p>
                            </div>
                            <div class="ml-4 flex-shrink-0">
                                <p class="text-xs text-gray-400">{{ message.createdAt|date('d/m H:i') }}</p>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            {% else %}
                <div class="px-6 py-8 text-center text-gray-500">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                    </svg>
                    <p class="mt-2">Nenhuma mensagem pendente</p>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
